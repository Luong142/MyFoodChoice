<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <LinearLayout
        android:id="@+id/leftChatView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/rounded_chat_layout"
        android:backgroundTint="@color/light_sky_blue"
        android:padding="8dp">

        <TextView
            android:id="@+id/leftChatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_how_can_i_help_you_today"
            android:textColor="#546E7A"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightChatView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="181dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/rounded_chat_layout"
        android:backgroundTint="@color/peach_puff"
        android:padding="8dp">

        <TextView
            android:id="@+id/rightChatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hi_i_am_a_placeholder"
            android:textColor="#546E7A"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>