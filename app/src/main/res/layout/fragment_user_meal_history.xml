
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
android:background="@drawable/bg_gradient_color_main">

    <TextView
        android:id="@+id/caloriesTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/royal_blue"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/calories_0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="82dp" />

    <Button
    android:id="@+id/morningButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/morning"
    android:textSize="18sp"
    android:textColor="@android:color/white"
    android:background="@android:color/holo_blue_dark"
    android:drawableLeft="@android:drawable/ic_input_add"
    android:padding="20dp"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/caloriesTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

<Button
    android:id="@+id/afternoonButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/afternoon"
    android:textSize="18sp"
    android:textColor="@android:color/white"
    android:background="@android:color/holo_blue_dark"
    android:drawableLeft="@android:drawable/ic_input_add"
    android:padding="20dp"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/morningButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

<Button
    android:id="@+id/nightButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/night"
    android:textSize="18sp"
    android:textColor="@android:color/white"
    android:background="@android:color/holo_blue_dark"
    android:drawableLeft="@android:drawable/ic_input_add"
    android:padding="20dp"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/afternoonButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/footerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/log_my_meal_view"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

