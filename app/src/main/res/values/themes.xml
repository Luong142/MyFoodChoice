<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyFoodChoice" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/dodger_blue</item>
    </style>

    <style name="Theme.MyFoodChoice" parent="Base.Theme.MyFoodChoice">
        <!-- the purpose of theme and style is to apply all of them without specifying individually -->
    </style>

    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_out_left</item>
    </style>

    <style name="CircularDeterminateProgressBarCalories">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_calories</item>
    </style>

    <style name="CircularDeterminateProgressBarSodium">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_sodium</item>
    </style>

    <style name="CircularDeterminateProgressBarCholesterol">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_cholesterol</item>
    </style>

    <style name="CircularDeterminateProgressBarSugar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_sugar</item>
    </style>
</resources>